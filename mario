import tkinter as tk

class VendingMachine:
    def __init__(self, master):
        self.master = master
        master.title("Vending Machine")

        self.products = {"Coke": 20, "Pepsi": 15, "Soda": 12}

        self.balance = 0

        self.balance_label = tk.Label(master, text="Balance: 0")
        self.balance_label.pack()

        for product, price in self.products.items():
            button = tk.Button(master, text=f"{product} - {price} coins", command=lambda p=product: self.select_product(p))
            button.pack()

        self.coin_entry = tk.Entry(master)
        self.coin_entry.pack()

        self.insert_coin_button = tk.Button(master, text="Insert Coin", command=self.insert_coin)
        self.insert_coin_button.pack()

    def insert_coin(self):
        coin = int(self.coin_entry.get())
        self.balance += coin
        self.balance_label.config(text=f"Balance: {self.balance}")
        self.coin_entry.delete(0, tk.END)

    def select_product(self, product):
        if product in self.products:
            price = self.products[product]
            if self.balance >= price:
                self.balance -= price
                self.balance_label.config(text=f"Balance: {self.balance}")
                print(f"Enjoy your {product}!")
            else:
                print("Insufficient balance.")
        else:
            print("Invalid product selection.")

root = tk.Tk()
vending_machine = VendingMachine(root)
root.mainloop()
